{% extends 'base.html.twig' %}

{% block title %}Modification de mot de passe{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-5">Modification de mot de passe</h1>
    {{form_start(form)}}
    <div class="row">
        <div class="col">
            <div class="alert alert-light p-4">
                {{form_widget(form)}}
            </div>
                <button type="submit" class="btn btn-primary my-3"><i class="fas fa-check mr-1"></i>Modifier le mot de passe</button>
                {{form_end(form)}}
        </div>
    </div>
</div>
{% endblock %}
