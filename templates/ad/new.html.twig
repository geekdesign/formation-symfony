{% extends 'base.html.twig' %}

{% block title %}Création d'une annonce{% endblock %}

{% form_theme form 'ad/_collection.html.twig' %}

{% block body %}

<div class="container">
    <h1 class="my-5">Créer une nouvelle annonce</h1>
    {{ form_start(form) }}

    <div class="row">
        <div class="col">
            <div class="alert alert-light p-4">
                <h3>Information générales</h3>
                <hr>
                {{form_row(form.title)}}
                {{form_row(form.slug)}}
                {{form_row(form.price)}}
                {{form_row(form.rooms)}}
            </div>
        </div>
        <div class="col">
            <div class="alert alert-light p-4">
                <h3>Détails de l'annonces</h3>
                <hr>
                {{form_row(form.introduction)}}
                {{form_row(form.content)}}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col my-3">
            <div class="alert alert-light">
                <h3>Images de l'annonce</h3>
                <hr>
                {{form_row(form.coverImage)}}
                {{form_row(form.images)}}
            </div>
        </div>
    </div>
    <div class="alert alert-success clearfix">
        <h3 class="alert-heading">Sauvegarder votre annonce</h3>
        <p>Super! vous êtes au bout de la création de votre annonce pour enregistrer, vous n'avez plus qu'a confirmer en cliquant sur le bouton si dessous</var></p>
        <button type="submit" class="btn btn-primary"><i class="fas fa-check mr-1"></i> Créer une annonce</button>
    </div>
    

    {{ form_end(form) }}
</div>

{% endblock %}

{% block _ad_images_widget %}
    <p>Images additionnelles pour le slider d'images:</p>
    {{form_widget(form)}}
    <input type="hidden" id="widgets-counter" value="0">
    <div class="form-group">
        <button type="button" id="add-image" class="btn btn-primary">Ajouter une image</button>
    </div>
{% endblock %}

{# Script JS qui permet de créer un formulaire d'ajout d'image pour le slider #}
{% block javascripts %}
    <script src="/js/ad.js"></script>
{% endblock %}