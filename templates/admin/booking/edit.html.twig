{% extends 'admin/base.html.twig' %}

{% block title %}Edition de la réservation
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1 class="my-5">Edition de la réservation:
			{{booking.id}}
		</h1>
		{{form_start(form)}}
		<div class="row">
			<div class="col">
				<div class="alert alert-light">
					{{form_row(form.startDate)}}
					{{form_row(form.endDate)}}
					{{form_row(form.booker)}}
				</div>
			</div>
			<div class="col">
				<div class="alert alert-light">
					{{form_row(form.ad)}}
					{{form_row(form.comment)}}
				</div>
			</div>
		</div>
		<button type="submit" class="btn btn-primary">
			<i class="fas fa-check mr-1"></i>
			Mettre à jour
		</button>
		{{form_end(form)}}


	</div>
{% endblock %}
